<section id="navigation">
  <nav class="navbar navbar-default" aria-label="application-level navigation">
    <div class="container-fluid top-bar">
      <!-- navbar header -->
      <div class="navbar-header">
        <span class="navbar-brand app-nav-heading" id="app-nav-heading-text" data-toggle="collapse" data-target="#collapsemenu">
          <%= I18n.t("plugins.jhu_public_branding.app_nav.menu_heading") %>
        </span>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsemenu"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- collapsible content -->
      <div class="collapse navbar-collapse" id="collapsemenu">
        <div class="container top">
          <ul class="nav navbar-nav">
            <%# TODO: add class="active" if we're on that page %>
            <% $MAIN_MENU.each do |link| %>
              <li><a href="<%= app_prefix(link[0]) %>"><%= t(link[1]) %></a></li>
            <% end %>
            <% unless AppConfig[:pui_hide][:search_tab] %>
              <li><a href="<%=  app_prefix('/search?reset=true') %>" title="<%= I18n.t('search_tab', :target => t('archive._plural'))%>">
                <span class="fa fa-search" aria-hidden="true"></span>
                <span class="sr-only"><%= I18n.t('search_tab', :target => t('archive._plural')) %></span>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</section>
