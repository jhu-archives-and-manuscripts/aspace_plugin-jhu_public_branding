<div class="container-fluid panel-footer">
  <div class="row-fluid">
    <div class="span8" id="contact_us_block">
      <h1>Contact Us</h1>
      <% mail_subject = "?subject=[#{t("plugins.jhu_public_branding.brand.applabel")}] #{request.original_url}" %>
      <% mail_title = "Contact Us about: #{URI.unescape(request.original_url)}" %>
      <p><strong><%= t("plugins.jhu_public_branding.contactus.ref_url.label").html_safe %></strong> <%= request.original_url %></p>
      <strong><%= t("plugins.jhu_public_branding.contactus.name.short") %></strong>:
      <p>
        <%= t("plugins.jhu_public_branding.contactus.email.label").html_safe %>
        <%= link_to(t("plugins.jhu_public_branding.contactus.email.value"),
                    "mailto:#{t("plugins.jhu_public_branding.contactus.email.value")}?subject=[#{t("plugins.jhu_public_branding.brand.applabel")}] #{request.original_url}",
                    :title => "Contact Us for: #{URI.unescape(request.original_url)}") %>
      </p>
      <p>
        <%= t("plugins.jhu_public_branding.contactus.phone.label").html_safe %>
        <%= t("plugins.jhu_public_branding.contactus.phone.value").html_safe %>
      </p>
      <p>
        <%= t("plugins.jhu_public_branding.contactus.address.label").html_safe %>
        <%= t("plugins.jhu_public_branding.contactus.address.value").html_safe %>
      </p>
      <p>
        <strong><%= t("plugins.jhu_public_branding.peabody.name.short") %></strong>:
        <br />
        <%= t("plugins.jhu_public_branding.peabody.email.label").html_safe %>
        <%= link_to(t("plugins.jhu_public_branding.peabody.email.value"),
                    "mailto:#{t("plugins.jhu_public_branding.peabody.email.value")}#{mail_subject}",
                    :title => mail_title) %>
        <br />
        <%= t("plugins.jhu_public_branding.peabody.phone.label").html_safe %>
        <%= t("plugins.jhu_public_branding.peabody.phone.value").html_safe %>
      </p>
    </div>
  </div>
